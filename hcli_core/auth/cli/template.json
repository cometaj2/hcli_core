    "cli": [
        {
            "id": "hco",
            "name": "hco",
            "section": [
                {
                    "name": "name",
                    "description": "hco - user account management utility"
                },
                {
                    "name": "synopsis",
                    "description": "hco <command> [username]"
                },
                {
                    "name": "description",
                    "description": "The \"hco\" utility manages user accounts following standard Unix/Linux patterns. It provides basic operations for adding users, removing users, and managing passwords."
                },
                {
                    "name": "examples",
                    "description": "hco useradd johndoe\n\necho 'mySecurePassword' | hco passwd johndoe\n\nhco userdel johndoe"
