{
    "hcliTemplateVersion": "1.0",
    "executable": [
        {
            "command": "hco useradd {p}",
            "http": "post"
        },
        {
            "command": "hco userdel {p}",
            "http": "post"
        },
        {
            "command": "hco passwd {p}",
            "http": "post"
        },
        {
            "command": "hco ls",
            "http": "get"
        },
        {
            "command": "hco key {p}",
            "http": "post"
        }
    ],
    "cli": [
        {
            "id": "hco",
            "name": "hco",
            "section": [
                {
                    "name": "name",
                    "description": "hco - user account management utility"
                },
                {
                    "name": "synopsis",
                    "description": "hco <command> [username]"
                },
                {
                    "name": "description",
                    "description": "The \"hco\" utility manages user accounts following standard Unix/Linux patterns. It provides basic operations for adding users, removing users, and managing passwords."
                },
                {
                    "name": "examples",
                    "description": "hco useradd johndoe\n\ntr -d '\\(rsn' < somepasswordfile | hco passwd username\n\nhco userdel johndoe\n\nhco ls"
                }
            ],
            "command": [
                {
                    "href": "hcouseradd",
                    "name": "useradd",
                    "description": "Create a new user account"
                },
                {
                    "href": "hcouserdel",
                    "name": "userdel",
                    "description": "Delete a user account"
                },
                {
                    "href": "hcopasswd",
                    "name": "passwd",
                    "description": "Change user password"
                },
                {
                    "href": "hcols",
                    "name": "ls",
                    "description": "List all users"
                },
                {
                    "href": "hcokey",
                    "name": "key",
                    "description": "API key management"
                }
            ]
        },
        {
            "id": "hcouseradd",
            "name": "useradd",
            "section": [
                {
                    "name": "name",
                    "description": "useradd - create a new user account"
                },
                {
                    "name": "synopsis",
                    "description": "hco useradd <username>"
                },
                {
                    "name": "description",
                    "description": "Creates a new user account with the specified username. The account will be created with a locked password; use passwd to set the password."
                }
            ],
            "parameter": {
                "href": "hcouseraddparameter"
            }
        },
        {
            "id": "hcouserdel",
            "name": "userdel",
            "section": [
                {
                    "name": "name",
                    "description": "userdel - delete a user account"
                },
                {
                    "name": "synopsis",
                    "description": "hco userdel <username>"
                },
                {
                    "name": "description",
                    "description": "Deletes a user account and all associated resources."
                }
            ],
            "parameter": {
                "href": "hcouserdelparameter"
            }
        },
        {
            "id": "hcopasswd",
            "name": "passwd",
            "section": [
                {
                    "name": "name",
                    "description": "passwd - change user password"
                },
                {
                    "name": "synopsis",
                    "description": "echo 'password' | hco passwd <username>"
                },
                {
                    "name": "description",
                    "description": "Changes the password of the specified user account. The password must be provided via stdin for security. Note that the HCLI client used to interact with hco (e.g. huckle) must have credentials set for a valid user. A user can manage their own credentials but the admin user can manage any users."
                },
                {
                    "name": "example",
                    "description": "tr -d '\\(rsn' < someotherpasswordfile | hco passwd username"
                }
            ],
            "parameter": {
                "href": "hcopasswdparameter"
            }
        },
        {
            "id": "hcols",
            "name": "ls",
            "section": [
                {
                    "name": "name",
                    "description": "ls - list users"
                },
                {
                    "name": "synopsis",
                    "description": "hco ls"
                },
                {
                    "name": "description",
                    "description": "List all users in the credentials file."
                },
                {
                    "name": "example",
                    "description": "hco ls | column"
                }
            ]
        },
        {
            "id": "hcokey",
            "name": "key",
            "section": [
                {
                    "name": "name",
                    "description": "key - API key management"
                },
                {
                    "name": "synopsis",
                    "description": "hco key <username>"
                },
                {
                    "name": "description",
                    "description": "Creates a new API key for the specified username. A user can create their own API keys but the admin can create API keys for any user. The command returns a unique keyid followed by the API key itself when successful."
                },
                {
                    "name": "example",
                    "description": "hco key username\n\nGJSLKO5Z5M    hcoak_FMn4dirl8kVoV1z96II84AeEDIbYyxTXZkMLllfgx8Deqwz0D1Rq88ObQBleUpN_Qncek8otlPx4ZaIYWtFWcQ"
                }
            ],
            "parameter": {
                "href": "hcokeyparameter"
            }
        }
    ]
}
